{
  "name": "update",
  "schema": {
    "type": "object",
    "properties": {
      "updated_markdown": { "type": "string" },
      "sections": {
        "type": "array",
        "items": { "$ref": "#/$defs/section" }
      },
      "items": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "text": { "type": "string" },
            "tags": {
              "type": "array",
              "items": { "type": "string" }
            }
          },
          "required": ["text", "tags"]
        }
      }
    },
    "required": ["updated_markdown", "sections", "items"],
    "$defs": {
      "section": {
        "type": "object",
        "properties": {
          "title": { "type": "string" },
          "level": { "type": "integer" },
          "anchor": { "type": "string" },
          "children": {
            "type": "array",
            "items": { "$ref": "#/$defs/section" }
          }
        },
        "required": ["title", "level", "anchor", "children"]
      }
    }
  },
  "strict": true
}
