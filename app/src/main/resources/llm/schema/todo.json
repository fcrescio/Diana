{
  "name": "update",
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "required": ["date", "items"],
    "properties": {
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["op", "text", "status", "tags"],
          "properties": {
            "op": {
              "type": "string",
              "enum": ["add", "update"]
            },
            "id": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]+$",
              "description": "Mandatory if op=update. Must be not used or empty if op=add."
            },
            "text": {
              "type": "string",
              "minLength": 1,
              "description": "Actionable description of the item."
            },
            "status": {
              "type": "string",
              "enum": ["not_started", "in_progress", "done", "cancelled"]
            },
            "tags": {
              "type": "array",
              "minItems": 1,
              "maxItems": 3,
              "items": {
                "type": "string",
                "pattern": "^[a-zàèéìòóùç ]+$"
              }
            },
            "due_date": { "type": "string", "format": "date" },
            "event_date": { "type": "string", "format": "date" }
          },
          "allOf": [
            {
              "if": { "properties": { "op": { "const": "update" } } },
              "then": { "required": ["id"] }
            },
            {
              "if": { "properties": { "op": { "const": "add" } } },
              "then": { "not": { "required": ["id"] } }
            }
          ]
        }
      }
    }
  },
  "strict": true
}
