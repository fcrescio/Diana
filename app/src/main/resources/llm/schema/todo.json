{
  "name": "update",
  "schema": {
    "type": "object",
    "required": ["date", "items"],
    "properties": {
      "date": {
        "type": "string",
        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
      },
      "items": {
        "type": "array",
        "minItems": 1,
        "items": {
          "type": "object",
          "required": ["op", "text", "status", "tags"],
          "properties": {
            "op": { "type": "string", "enum": ["add", "update"] },
            "id": {
              "type": "string",
              "pattern": "^[a-zA-Z0-9_-]+$",
              "description": "Obbligatorio se op=update. Ignorato se op=add."
            },
            "text": { "type": "string", "minLength": 1 },
            "status": {
              "type": "string",
              "enum": ["not_started", "in_progress", "done", "not_required", "cancelled"]
            },
            "tags": {
              "type": "array",
              "minItems": 1,
              "maxItems": 3,
              "items": { "type": "string", "enum": [] }
            },
            "due_date": { "type": "string", "format": "date" },
            "event_date": { "type": "string", "format": "date" }
          }
        }
      }
    }
  }
}

